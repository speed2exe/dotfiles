# Open Alacritty
cmd - return : /Applications/Alacritty.app/Contents/MacOS/alacritty

# Focus Window
cmd - u : yabai --message window --focus north
cmd - e : yabai --message window --focus south
cmd - d : yabai --message window --focus west
cmd - a : yabai --message window --focus east

# Increase window size
cmd + ctrl - u : yabai --message window --resize top:0:-50
cmd + ctrl - e : yabai --message window --resize bottom:0:50
cmd + ctrl - d : yabai --message window --resize left:-50:0
cmd + ctrl - a : yabai --message window --resize right:50:0

# Decrease window size
cmd + alt - u : yabai --message window --resize bottom:0:-50
cmd + alt - e : yabai --message window --resize top:0:50
cmd + alt - d : yabai --message window --resize right:-50:0
cmd + alt - a : yabai --message window --resize left:50:0

# Swap Window
cmd - up    : yabai --message window --swap north
cmd - down  : yabai --message window --swap south
cmd - left  : yabai --message window --swap west
cmd - right : yabai --message window --swap east

# Warp Window
cmd + ctrl - up    : yabai --message window --warp north
cmd + ctrl - down  : yabai --message window --warp south
cmd + ctrl - left  : yabai --message window --warp west
cmd + ctrl - right : yabai --message window --warp east

# Stack Window
cmd + shift - up    : yabai --message window --stack north && yabai --message window --focus stack.recent
cmd + shift - down  : yabai --message window --stack south && yabai --message window --focus stack.recent
cmd + shift - left  : yabai --message window --stack west  && yabai --message window --focus stack.recent
cmd + shift - right : yabai --message window --stack east  && yabai --message window --focus stack.recent

# Toggle Window Split
cmd - pageup : yabai --message window --toggle split

# Move Window to most recent window
cmd - escape : yabai --message window --space recent && yabai --message window --focus recent

# Auto-balance window
cmd - n : yabai --message space --balance

# Focus spaces
# NOTE: need to create space first (1 time setup)
cmd - g : yabai --message space --focus prev
cmd - j : yabai --message space --focus next
cmd - i : yabai --message space --focus first

# Swap spaces
cmd + ctrl - g : yabai --message space --swap prev
cmd + ctrl - j : yabai --message space --swap next

# Focus monitor
cmd - k : yabai --message display --focus prev
cmd - x : yabai --message display --focus next

# Move window to previous or next space
cmd + alt - g : yabai --message window --space prev && yabai --message window --focus recent
cmd + alt - j : yabai --message window --space next && yabai --message window --focus recent

# Move window to previous or next display
cmd + alt - k : yabai --message window --display prev && yabai --message window --focus recent
cmd + alt - x : yabai --message window --display next && yabai --message window --focus recent

# Make window move to first space
cmd - backspace : yabai --message window --space first

# Make window larger
cmd - h : yabai --message window --resize bottom_right:50:50 ; yabai --message window --resize top_left:-50:-50
