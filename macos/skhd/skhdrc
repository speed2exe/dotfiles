# Open Alacritty
alt - x : /Applications/Alacritty.app/Contents/MacOS/alacritty

# Focus Window
# NOTE: need to create space first (1 time setup: 4 finger swipe up, '+')
alt - u : yabai --message window --focus north
alt - e : yabai --message window --focus south
alt - d : yabai --message window --focus west
alt - a : yabai --message window --focus east
alt - o : yabai --message window --focus prev

# Swap Window
alt + ctrl - u : yabai --message window --swap north
alt + ctrl - e : yabai --message window --swap south
alt + ctrl - d : yabai --message window --swap west
alt + ctrl - a : yabai --message window --swap east
alt + ctrl - o : yabai --message window --swap prev

# Warp(Move) Window
alt + cmd - u : yabai --message window --warp north
alt + cmd - e : yabai --message window --warp south
alt + cmd - d : yabai --message window --warp west
alt + cmd - a : yabai --message window --warp east
alt + cmd - o : yabai --message window --warp prev

# Toggle Window Split
cmd - g : yabai --message window --toggle split

# Increase window size
alt - h : yabai --message window --resize top:0:-50
alt - n : yabai --message window --resize bottom:0:50
alt - r : yabai --message window --resize left:-50:0
alt - t : yabai --message window --resize right:50:0

# Decrease window size
alt + ctrl - h : yabai --message window --resize bottom:0:-50
alt + ctrl - n : yabai --message window --resize top:0:50
alt + ctrl - r : yabai --message window --resize right:-50:0
alt + ctrl - t : yabai --message window --resize left:50:0

# Focus on space
alt - 1 : yabai --message space --focus 1
alt - 2 : yabai --message space --focus 2
alt - 3 : yabai --message space --focus 3
alt - 4 : yabai --message space --focus 4
alt - 5 : yabai --message space --focus 5
alt - 6 : yabai --message space --focus 6
alt - 7 : yabai --message space --focus 7
alt - 8 : yabai --message space --focus 8
alt - 9 : yabai --message space --focus 9
alt - l : yabai --message space --focus last

# Move window to previous or next space
alt + ctrl - 1 : yabai --message window --space 1 && yabai --message window --focus recent
alt + ctrl - 2 : yabai --message window --space 2 && yabai --message window --focus recent
alt + ctrl - 3 : yabai --message window --space 3 && yabai --message window --focus recent
alt + ctrl - 4 : yabai --message window --space 4 && yabai --message window --focus recent
alt + ctrl - 5 : yabai --message window --space 5 && yabai --message window --focus recent
alt + ctrl - 6 : yabai --message window --space 6 && yabai --message window --focus recent
alt + ctrl - 7 : yabai --message window --space 7 && yabai --message window --focus recent
alt + ctrl - 8 : yabai --message window --space 8 && yabai --message window --focus recent
alt + ctrl - 9 : yabai --message window --space 9 && yabai --message window --focus recent
alt + ctrl - l : yabai --message window --space last && yabai --message window --focus recent

# Auto-balance window
alt - b : yabai --message space --balance

# Make window larger
alt + ctrl - b : yabai --message window --resize bottom_right:50:50 ; yabai --message window --resize top_left:-50:-50

# Focus monitor
alt - up   : yabai --message display --focus prev
alt - down : yabai --message display --focus next
alt - m    : yabai --message display --focus last

# Move window to previous or next monitor
alt + alt - up   : yabai --message window --display prev && yabai --message window --focus recent
alt + alt - down : yabai --message window --display next && yabai --message window --focus recent
alt + alt - m    : yabai --message window --display last && yabai --message window --focus recent

