##---------- Menu ----------##

# reset the keyboard daemon
# usually happens after modification to sxhkd file
super + l
    killall -q sxhkd && sxhkd &

# Terminal
super + Return
    alacritty

# Make Receptacle
super + x
    bspc node -i

# Remove all Receptacles
super + k
    ~/.config/sxhkd/remove_receptacle.sh

# get window and pull it to current desktop
super + space
    rofi -show combi -show-icons -sidebar-mode -steal-focus

# file browser
super + f
    rofi -show filebrowser -steal-focus

# screenshot menu
super + s
    ~/.config/sxhkd/screenshot.sh

# power menu
super + p
    ~/.config/sxhkd/power.sh


###---------- System Keys ----------##

# Brighness control
XF86MonBrightness{Up,Down}
	brightness{ --inc, --dec}

# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	volume{ --inc, --dec}

XF86AudioMute
	volume --toggle


##---------- Node Management ----------##

# Close App
super + q
    ~/.config/sxhkd/quit.sh

# Kill App
super + shift + q
	bspc node -k

# Toggle Modes
super + z
    bspc node -t "~"{floating,tiled,fullscreen}

# Change focus
super + {a,u,o,e}
	bspc node -f {west,north,east,south}

# Swap
super + {Left,Up,Right,Down}
    bspc node -s {west,north,east,south} --follow

# Fill Receptacle
super + i
    ~/.config/sxhkd/move_to_recep.sh

# Rotate
super + {Next,Prior,End}
    bspc node @parent -R {90,180,270}

# Auto Resize
super + period
    bspc node @/ -B

# Expand from Left
super + shift + Left
    ~/.config/sxhkd/resize.sh left -16 0

# Expand from Right
super + shift + Right
    ~/.config/sxhkd/resize.sh right 16 0

# Expand from Top
super + shift + Up
    ~/.config/sxhkd/resize.sh top 0 -16

# Expand from Bottom
super + shift + Down
    ~/.config/sxhkd/resize.sh bottom 0 16

# Shrink from Right
super + alt + Right
    ~/.config/sxhkd/resize.sh left 16 0 || ~/.config/sxhkd/auto_recep.sh west

# Shrink from Left
super + alt + Left
    ~/.config/sxhkd/resize.sh right -16 0 || ~/.config/sxhkd/auto_recep.sh east

# Shrink from Top
super + alt + Down
    ~/.config/sxhkd/resize.sh top 0 16 || ~/.config/sxhkd/auto_recep.sh north

# Shrink from Bottom
super + alt + Up
    ~/.config/sxhkd/resize.sh bottom 0 -16 || ~/.config/sxhkd/auto_recep.sh south

## Move floating windows
super + ctrl + {Left,Down,Up,Right}
	bspc node -v {-50 0,0 50,0 -50,50 0}


##---------- Desktop Management ----------##

# focus to specific desktop
super + {0-7}
    bspc desktop -f '^{1-8}'

# select last desktop
super Tab
    bspc desktop -f last

# Swap desktop
super + {8,9}
    bspc desktop -s {prev,next} --follow

# rename destkop
super + r
    ~/.config/sxhkd/rename_desktop.sh

##---------- Transfer Management ----------##

# Move Node to last desktop
# usually happens aftar rofi window search
super + Escape
    bspc node -d last --follow

# Send node to N
super + BackSpace
    ~/.config/sxhkd/recycle_node.sh

# Send node to specific desktop
super + shift + {0-7}
    bspc node -d  '^{1-8}'
