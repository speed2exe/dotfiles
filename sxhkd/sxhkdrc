##---------- Menu ----------##

# reset the keyboard daemon
# usually happens after modification to sxhkd file
super + r
    killall -q sxhkd && sxhkd &

# Terminal
super + Return
    alacritty

# Make Receptacle
super + x
    bspc node -i

# Remove all Receptacles
super + k
    ~/.config/sxhkd/remove_receptacle.sh

# get window and pull it to current desktop
super + space
    ~/.config/sxhkd/get.sh

# file browser
super + f
    rofi -show filebrowser -steal-focus

# screenshot menu
super + s
    ~/.config/sxhkd/screenshot.sh

# power menu
super + p
    ~/.config/sxhkd/power.sh

###---------- System Keys ----------##

# Brighness control
XF86MonBrightness{Up,Down}
	brightness{ --inc, --dec}

# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	volume{ --inc, --dec}

XF86AudioMute
	volume --toggle

##---------- Node Management ----------##

# Close App
super + q
	bspc node -i && bspc node -c

# Kill App
super + shift + q
	bspc node -k

# Toggle Modes
super + z
    bspc node -t "~"{floating,tiled,fullscreen}

# Change focus
super + {a,u,o,e}
	bspc node -f {west,north,east,south}

# Swap
super + {Left,Up,Right,Down}
    bspc node -s {west,north,east,south} --follow

# Fill Receptacle
super + i
    ~/.config/sxhkd/move_to_recep.sh

# Rotate
super + {Next,Prior,End}
    bspc node @parent -R {90,180,270}

# Auto Resize
super + period
    bspc node @/ -B

# Expanding windows
super + shift + {Left,Right,Up,Down}
	bspc node -z {left -50 0,right 50 0,top 0 -50,bottom 0 50}

## Shrinking windows
super + alt + {Right,Left,Down,Up}
	bspc node -z {left 50 0,right -50 0,top 0 50,bottom 0 -50}

## Move floating windows
super + ctrl + {Left,Down,Up,Right}
	bspc node -v {-50 0,0 50,0 -50,50 0}

##---------- Desktop Management ----------##

# focus to specific desktop
super + {0-7}
    bspc desktop -f '^{1-8}'

# select last desktop
super Tab
    bspc desktop -f last

# Swap desktop
super + {8,9}
    bspc desktop -s {prev,next} --follow

##---------- Transfer Management ----------##

# Move Node to last desktop
# usually happens aftar rofi window search
super + Escape
    bspc node -d last --follow

# Send node to N
super + BackSpace
    ~/.config/sxhkd/recycle_node.sh

# Send node to specific desktop
super + shift + {0-7}
    bspc node -d  '^{1-8}'
