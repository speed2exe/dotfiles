# Terminal
super + Return
    alacritty

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
super + space
	sh ~/.config/bspwm/rofi/bin/launcher

# Rofi Network Menu
super + n
	nmd

# Rofi Themes Menu
super + t
	sh ~/.config/bspwm/rofi/bin/themes

## Rofi Menus/Applets
super + {w,m,x,r,s,i}
	sh ~/.config/bspwm/rofi/bin/{windows,mpd,powermenu,asroot,screenshot,network}

###---------- System Keys ----------##

# Brighness control
XF86MonBrightness{Up,Down}
	brightness{ --inc, --dec}

# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	volume{ --inc, --dec}

XF86AudioMute
	volume --toggle

##---------- Bspwm ----------##

# Close App
super + c
	bspc node -c

# Kill App
super + q
	bspc node -k

# Toggle Modes
super + Escape
    bspc node -t "~"{floating,tiled,fullscreen}

# Change focus
super + {a,u,o,e}
	bspc node -f {west,north,east,south}

# Swap
super + {Left,Up,Right,Down}
    bspc node -s {west,north,east,south} --follow

# Rotate
super + {Next,Prior}
    bspc node @parent -R {90,270}

# Expanding windows
super + shift + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}

## Shrinking windows
super + alt + {Right,Left,Down,Up}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}

## Move floating windows
super + ctrl + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Change Desktop
super + {1-7}
    bspc desktop -f '^{1-7}'

# Go to last destktop
super + Tab
    bspc desktop -f last

# Send focused window to another workspace
super + shift + {1-7}
	bspc node -d '^{1-7}' --follow

# Send to previous opened desktop
# usually happens after rofi windows search
super + shift + Tab
    bspc node -d last --follow

