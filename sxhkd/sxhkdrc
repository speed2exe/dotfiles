# use xev cli app (from org-xev package) to check input
#
# reset the keyboard daemon
# usually happens after modification to sxhkd file
super + l
    killall -q sxhkd && sxhkd &

# On the fly scripts
super + Escape
    ~/.config/sxhkd/shortcuts.sh

# Terminal
super + {_,shift +}Return
    {alacritty, bspc rule -a \* -o state=floating && alacritty}

# Remove all Receptacles
super + k
    ~/.config/sxhkd/remove_receptacle.sh

# get window and pull it to current desktop
super + space
    rofi -show combi -show-icons -sidebar-mode -steal-focus

# file browser
super + f
    rofi -show filebrowser -steal-focus

# screenshot menu
super + s
    ~/.config/sxhkd/screenshot.sh

# power menu
super + p
    ~/.config/sxhkd/power.sh

# change wallpaper
super + w
    nitrogen --set-zoom-fill --random ~/wallpaper

super + shift + w
    ~/.config/sxhkd/get_wallpaper

###---------- System Keys ----------##

# Brighness control
XF86MonBrightness{Up,Down}
    backlight_control {+,-}10

# Volume control
XF86Audio{RaiseVolume,LowerVolume}
    pamixer --{increase,decrease} 5 && ~/.config/sxhkd/dunstify_volume.sh

XF86AudioMute
    pamixer --toggle-mute && ~/.config/sxhkd/dunstify_volume.sh


##---------- Node Management ----------##

# Spawn Receptacle
super + x
    bspc node -i

# Next through floating windows
super + n
    bspc node -f next.local.floating

# Previous through floating windows
super + r
    bspc node -f prev.local.floating

# Close App
super + q
    bspc node -c

# Kill App
super + shift + q
	bspc node -k

# Toggle Modes
super + t
    bspc node -t "~"{floating,tiled}

# Change focus
super + {a,u,o,e}
	bspc node -f {west,north,east,south}

# Swap
super + {Left,Up,Right,Down}
    bspc node -s {west,north,east,south} --follow

# Fill Receptacle
super + i
    ~/.config/sxhkd/move_to_recep.sh

# Rotate
super + {Next,Prior,End}
    bspc node @parent -R {90,180,270}

# Auto Resize with equal area
super + g
    bspc node @/ -B

# Expand from Left
super + shift + a
    ~/.config/sxhkd/resize.sh left -16 0

# Expand from Right
super + shift + o
    ~/.config/sxhkd/resize.sh right 16 0

# Expand from Top
super + shift + u
    ~/.config/sxhkd/resize.sh top 0 -16

# Expand from Bottom
super + shift + x
    ~/.config/sxhkd/resize.sh bottom 0 16

# Shrink from Right
super + alt + o
    ~/.config/sxhkd/resize.sh left 16 0 || ~/.config/sxhkd/auto_recep.sh west

# Shrink from Left
super + alt + a
    ~/.config/sxhkd/resize.sh right -16 0 || ~/.config/sxhkd/auto_recep.sh east

# Shrink from Top
super + alt + e
    ~/.config/sxhkd/resize.sh top 0 16 || ~/.config/sxhkd/auto_recep.sh north

# Shrink from Bottom
super + alt + u
    ~/.config/sxhkd/resize.sh bottom 0 -16 || ~/.config/sxhkd/auto_recep.sh south

# Move window left
super + ctrl + a
    ~/.config/sxhkd/move.sh left -16 0

# Move window right
super + ctrl + o
    ~/.config/sxhkd/move.sh right 16 0

# Move window up
super + ctrl + u
    ~/.config/sxhkd/move.sh top 0 -16

# Move window down
super + ctrl + e
    ~/.config/sxhkd/move.sh bottom 0 16

##---------- Desktop Management ----------##

# focus desktop
super + {4,6,5}
    bspc desktop -f {prev,next,'^1'}

# Swap desktop
super + shift + {4,6,5}
    bspc desktop -s {prev,next,'^1'} --follow

# select last desktop
# good for switching back after rofi search
super Tab
    bspc desktop -f last

# rename destkop
super + d
    ~/.config/sxhkd/rename_desktop.sh

##---------- Transfer Management ----------##

# Move Node to last desktop
# usually happens aftar rofi window search
super + shift + Tab
    bspc node -d last --follow

# Send node to first desktop
super + BackSpace
	bspc node -d '^1'

# Send node to previous or next desktop
super + alt + {4,6}
    bspc node -d {prev,next} --follow
