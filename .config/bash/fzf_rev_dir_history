#!/usr/bin/env bash

dir=$(tac ~/marks/dir_history.txt \
  | awk '!x[$0]++' \
  | tee /tmp/dir_history.txt \
  | xargs eza --sort=none --list-dirs --color=always 2> /dev/null \
  | fzf --no-sort \
  | cut --delimiter=' ' --fields=1
    )

tac /tmp/dir_history.txt > ~/marks/dir_history.txt

test -n "$dir" && cd "$dir"
