#!/usr/bin/env bash

X_INPUT=$(eza --all --color=always --icons=always --recurse --oneline --absolute --classify=always \
  | rg '\*$' | sed "s|$PWD/|./|;s/.$//" \
  | fzf --preview='test "$(dd bs=2 count=1 < {2} 2> /dev/null)" = "#!" && bat --theme=Dracula --number --color=always {2} || (file {2} && ldd {2})' \
        --bind='ctrl-u:preview-half-page-up,ctrl-d:preview-half-page-down,ctrl-j:preview-down,ctrl-k:preview-up' \
  | cut -d' ' -f2)

test -z "$X_INPUT" && return
X_INPUT="./$X_INPUT"
X_LEFT_WORD="$(. ~/.config/bash/x_left_word)"
. ~/.config/bash/insert_at_cursor
